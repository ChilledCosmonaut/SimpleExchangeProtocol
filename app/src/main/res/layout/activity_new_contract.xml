<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewContract">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/ContractNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/contractNumber"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/ContractNumberInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="7dp"
                    android:ems="15"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/contractPartner"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/ContractPartnerFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="7dp"
                    android:ems="8"
                    android:hint="@string/firstName"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/ContractPartnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-214dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="7dp"
                    android:ems="8"
                    android:hint="@string/name"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/docPhotos"
                    android:textSize="22sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="7dp"
                    android:onClick="takePicture"
                    android:text="@string/takePhoto"
                    android:textSize="22sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="0dp"
                        android:maxWidth="128dp"
                        android:maxHeight="128dp"
                        app:srcCompat="@drawable/kamera" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/fourthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/signature"
                    android:textSize="22sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="7dp"
                    android:onClick="ClearDrawingPad"
                    android:text="@string/clearDrawboard"
                    android:textSize="22sp" />

            </LinearLayout>

            <com.example.simpleexchangeprotocol.PaintView
                android:id="@+id/paintView"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="120dp"
                android:onClick="createMyPDF"
                android:text="@string/pdfFinish"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>